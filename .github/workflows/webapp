name: build webapp
on: workflow_dispatcher
jobs:
  build:
  runs-on: ubuntu-latest
  steps:
   - name: build index page
     run: echo "<html><body><h1>HelloWorld!</h1></body></html>" > index.html
   - name: upload artifacts
     uses: actions/upload-artifact@v4
     with:
       name: index-file
       path: index.html